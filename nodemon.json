{
    "watch": [
        "server"
    ],
    "ignore": [
        "server/components/**/*",
        "server/pages/**/*",
        "server/context/**/*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts, tsx",
    "exec": "ts-node --project tsconfig.server.json -r tsconfig-paths/register ./server/index.ts"
}